{
  "name": "react-scoped-style",
  "version": "0.2.0",
  "description": "scope react element by transform external style into inline styles",
  "keywords": [
    "react",
    "react-component",
    "react-scoped-css"
  ],
  "homepage": "http://github.com/react-component/react-scoped-css",
  "author": "yiminghe@gmail.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:react-component/react-scoped-css.git"
  },
  "bugs": {
    "url": "http://github.com/react-component/react-scoped-css/issues"
  },
  "licenses": "MIT",
  "config": {
    "port": 8000
  },
  "scripts": {
    "build": "rc-tools run build",
    "less": "rc-tools run less",
    "gh-pages": "rc-tools run gh-pages",
    "history": "rc-tools run history",
    "start": "node-dev --harmony node_modules/.bin/rc-server",
    "publish": "rc-tools run tag && spm publish",
    "lint": "rc-tools run lint",
    "saucelabs": "node --harmony node_modules/.bin/rc-tools run saucelabs",
    "browser-test": "node --harmony node_modules/.bin/rc-tools run browser-test",
    "browser-test-cover": "node --harmony node_modules/.bin/rc-tools run browser-test-cover"
  },
  "devDependencies": {
    "expect.js": "0.3.x",
    "precommit-hook": "1.x",
    "rc-server": "2.x",
    "rc-tools": "2.x",
    "react": "0.13.x",
    "node-dev": "2.x"
  },
  "precommit": [
    "lint",
    "less"
  ],
  "browserify": {
    "transform": [
      [
        "reactify",
        {"es6": true}
      ],
      "envify"
    ]
  },
  "spm": {
    "dependencies": {
      "react": "*"
    }
  }
}
